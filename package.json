{
  "name": "@pabueco/ncl",
  "description": "Explore the changelog of dependencies and repositories in a nice way.",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "ncl": "bin/node.js"
  },
  "version": "0.6.4",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pabueco/ncl.git"
  },
  "files": [
    "bin",
    "build",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "bun --watch src/index.ts",
