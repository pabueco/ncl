  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.1.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "date-fns": "^3.6.0",
    "lodash-es": "^4.17.21",
    "marked": "^12.0.2",
    "marked-terminal": "^7.1.0",
    "ora": "^8.0.1",
    "semver": "^7.6.2",
    "zx": "8.1.2"
